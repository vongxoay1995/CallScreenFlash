<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/radiusLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_4sdp">

            <RelativeLayout
                android:id="@+id/layout_item"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_220sdp">

                <com.call.colorscreen.ledflash.view.TextureViewCusTom
                    android:id="@+id/video_themes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_thumb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="5">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"/>
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:orientation="horizontal"
                         android:weightSum="3"
                         android:layout_weight="1.5"
                         android:gravity="center">
                         <de.hdodenhof.circleimageview.CircleImageView
                             android:id="@+id/imgAvatar"
                             android:layout_width="0dp"
                             android:layout_height="@dimen/_60sdp"
                             android:layout_weight="1.3"
                             android:layout_gravity="center"
                             android:src="@drawable/avatar"
                             app:civ_border_color="#FFFFFF"
                             app:civ_border_width="1dp" />
                     </LinearLayout>
                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:paddingTop="@dimen/_5sdp"
                        android:text="@string/caller"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtPhone"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:paddingTop="@dimen/_5sdp"
                        android:text="0000-0000-0000"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintTop_toBottomOf="@id/txtName" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="1"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/btnReject"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.7"
                                app:srcCompat="@drawable/ic_reject_call"
                                tools:ignore="VectorDrawableCompat" />
                        </LinearLayout>

                         <View
                             android:layout_width="0dp"
                             android:layout_weight="1"
                             android:layout_height="match_parent"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="1"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/btnAccept"
                                android:layout_width="match_parent"
                                android:layout_weight="0.7"
                                android:layout_height="0dp"
                                android:layout_gravity="end"
                                app:srcCompat="@drawable/ic_accept_call"
                                tools:ignore="VectorDrawableCompat" />
                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layoutBorderItemSelect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_element_selected"
                    android:visibility="visible" />
                <ImageView
                    android:id="@+id/imgPlay"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/play_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/txtPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Jpeg"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:paddingHorizontal="@dimen/_2sdp"
                    android:paddingVertical="@dimen/_1sdp"
                    android:background="@drawable/bg_white_round_text"/>
                <RelativeLayout
                    android:id="@+id/layoutSelected"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentEnd="true"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/q_circle"
                        android:layout_alignParentEnd="true"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imgTick"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        app:srcCompat="@drawable/ic_checked" />
                </RelativeLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>